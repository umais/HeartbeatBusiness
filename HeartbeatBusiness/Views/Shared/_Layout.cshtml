<!DOCTYPE html>

<html manifest="">
<head>
    <link rel="stylesheet" href="~/Content/bootstrap/bootstrap.min.css" />
<link href="~/Content/bootstrap/amelia-bootstrap-theme.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/bootstrap/styles.css" />
    <link rel="stylesheet" href="~/Content/Angular/ng-grid.min.css" />
    <link rel="stylesheet" href="~/Scripts/styles.css" />
       <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" /> 
    <meta name="viewport" content="width=device-width" />
    
    <title>@ViewBag.Title</title>
</head>
<body ng-app="HeartbeatApp" >
  
    <div ng-controller="HeartbeatController" data-ng-init="init();">
        
        <header id="top" class="container">
<div id='controls' class='navbar navbar-default navbar-fixed-top'>

    <div id="logo" class="navbar-header">
        <div class="navbar-brand ">
        Heartbeat Business Solutions
        </div>

        <button class=" btn btn-success navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
     
            <span class="glyphicon glyphicon-chevron-down " ></span>

        </button>

     </div>
    <div class="navbar-collapse collapse">
    
        <ul class="nav navbar-nav ">

            <li ng-repeat="item in menuItems" class="{{item.cls}} ">
                <a href={{item.url}}>{{item.name}}</a> 
            </li>

           <li> <a href="#frmAdd"  class="nav"  data-toggle="modal">Add Time</a></li>
           
        </ul>

       
    </div>
   <!--  <div class="dropdown">
            <button class="btn btn-success" id="pickbutton">Pick One</button>
            <button class="btn btn-success" data-toggle="dropdown"><span class="caret"></span></button>
            <ul class="dropdown-menu" id="menuDropDown">

            <li ng-repeat="item in menuItems"  tabindex="-1">
                <a >{{item.name}}</a> 
            </li>


           
        </ul>
        </div>-->
</div>
    </header>
   @RenderBody()


        <div class="modal fade " tabindex="-1" id="frmAdd">
                 <div class="modal-dialog">
                     <div class="modal-content">
                         <div class="modal-header">
                             <a href="#" class="close" data-dismiss="modal">&times;</a>
                             <h4>Add Hours</h4>
                             
                         </div>
                         <div class="modal-body">
               
<div class="form-group">
                      <label>Worker:</label>
                     <select class="form-control" >
                       <option ng-repeat="w in workers" value="{{w.ParamValue}}" >{{w.ParamName}}</option>
                     
                     </select> 

                 </div>
                 <div class="form-group">
                      <label>Tasks:</label>
                     <select class="form-control" >
                       <option ng-repeat="t in tasks" value="{{t.ParamValue}}" >{{t.ParamName}}</option>
                     
                     </select> 

                 </div>
         <div class="form-group"> <label>Work Date:</label><input id="WorkDate" type="text" value="" ng-model="WorkDate" class="form-control"/> </div>
                <div class="form-group"> <label>Hours:</label><input id="Hours" type="text" value="" ng-model="Hours" class="form-control"/> </div>
          <div class="form-group"> <label>Description:</label><input id="Description" type="text" value="" ng-model="Description" class="form-control"/> </div>

</div>
        <div class="modal-footer">       
            <div class="form-group"> 
                <input type="button"  class="btn btn-success" value="Submit Time" class="form-control" ng-click="getReport();"/>

            </div>

          </div>
            </div>
            </div>
            </div>


        </div>

    
            
</body>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
      <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script> 
    <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Content/Angular/angular.min.js"></script>
    <script src="~/Content/Angular/ng-grid-2.0.6.min.js"></script>
    <script src="~/Content/Angular/app.js"></script>
    <script src="~/Content/Angular/HeartbeatService.js"></script>
    <script src="~/Content/Angular/HeartbeatController.js"></script>
    
    
    
    <script src="~/Scripts/script.js"></script>
</html>

